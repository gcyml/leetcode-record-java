class Solution {
    public String toHex(int num) {
        if(num == 0) {
            return "0";
        }
        String res = "";
        for(int i = 0; num!= 0 && i<8;i++){
            int t = num & 0xf;
            if(t > 9){
                res = (char)('a' + t-10) + "" + res;
            } else {
                res = t + "" + res;
            }
            num >>= 4;
        }
        return res;
    }
}