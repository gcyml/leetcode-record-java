class Solution {
    public boolean hasAlternatingBits(int n) {
        int lastBit = n%2;
        n >>= 1;
        while(n != 0) {
            if(n%2 == lastBit) {
                return false;
            } else {
                lastBit = n%2;
            }
            n >>= 1;
        }
        return true;
    }
}