/**
 * Definition for singly-linked list.
 * public class ListNode {
 *     int val;
 *     ListNode next;
 *     ListNode(int x) { val = x; }
 * }
 */
class Solution {
    public ListNode removeElements(ListNode head, int val) {
        if(head == null) {
            return head;
        }
 
        ListNode res = head;
        while(head != null) {
            while(head.next != null && head.next.val == val) {
                head.next = head.next.next;
            }
            head = head.next;
        }
        if(res.val == val) {
            res = res.next;
        }
        return res;
    }
}