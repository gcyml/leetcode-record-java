class Solution {
    public int longestPalindrome(String s) {
        int[] array = new int[52];
        int l = 0;
        for(char c: s.toCharArray()) {
            if(c < 'a') {
                array[c-'A']++;
            } else {
                array[c-'a' +26]++;
            }
            
        }
        for(int i=0;i<52;i++) {
            if(array[i]%2 ==0){
                l+= array[i];
            } else {
                l += array[i] -1;
            }
        }
        if(l<s.length()){
            l++;
        }
        return l;
        
    }
}