class Solution {
    public int smallestRangeI(int[] A, int K) {
        int max = Integer.MIN_VALUE;
        int min = Integer.MAX_VALUE;
        for(int a : A) {
            max = Math.max(a, max);
            min = Math.min(a, min);
        }
        return max - min > K*2 ? max - min - 2 * K : 0;
    }
}