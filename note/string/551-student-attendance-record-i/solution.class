class Solution {
    public boolean checkRecord(String s) {
        int absentCount = 0, lateCount = 0;
        for(int i =0;i<s.length();i++) {
            if(s.charAt(i) == 'A') {
                if(++absentCount > 1) {
                    return false;
                }
                lateCount = 0;
            } else if(s.charAt(i) == 'L') {
                if(++lateCount > 2) {
                    return false;
                }          
            } else {
                lateCount = 0;
            }
        }
        return true;
    }
}