class Solution {
    public int countSegments(String s) {
        int res = 0;
        boolean isContigyous = false;
        for(int i =0;i<s.length();i++){
            if(s.charAt(i) != ' ') {
                isContigyous = true;
            } else {
                if(isContigyous) {
                    res++;
                }
                isContigyous = false;
            }
        }
        if(isContigyous) {
            res++;
        }
        return res;
    }
}