class Solution {
    public int compress(char[] chars) {
        if(chars.length == 0) {
            return 0;
        }
        int mark = 0;       
        int write = 0;
        for(int i = 0; i < chars.length; i++){
            if(i == chars.length-1 || chars[i] != chars[i+1] ) {
                chars[write] = chars[mark];
                write++;
                // æ å¿ä½å°äºå½åç´¢å¼ï¼åå¯ç»§ç»­åå¥
                if(mark < i) {
                    for(char a : String.valueOf(i-mark+1).toCharArray()) {
                        chars[write++] = a;
                    }
                }
                mark = i+1;
            }
        }
        return write;
        
    }
}